<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:minSdkVersion="21"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Sacalabici.NoActionBar"
        tools:targetApi="tiramisu">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />
        <meta-data
            android:name="com.mapbox.AccessToken"
            android:resource="@string/mapbox_access_token" />



        <activity
            android:name=".framework.views.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".framework.views.activities.announcement.AddAnnouncementActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"/>

        <activity
            android:name=".framework.adapters.views.activities.ProfileEditActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".framework.views.activities.announcement.ModifyAnnouncementActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".framework.views.activities.session.SessionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".framework.views.activities.session.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".framework.views.activities.session.RegisterUserActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".framework.views.activities.session.RegisterContinueActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".framework.views.activities.Session.RecoverPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Otras actividades relevantes -->
        <activity
            android:name=".framework.views.activities.AddRouteActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".framework.views.activities.ModifyRouteActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".framework.views.activities.session.RegisterFinishActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".framework.views.activities.session.LoginFinishActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".framework.adapters.views.fragments.SettingsFragment"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"/>
    </application>
    <queries>
        <package android:name="com.facebook.katana" /> <!-- Facebook App -->
        <package android:name="com.facebook.orca" />   <!-- Messenger -->
    </queries>
</manifest>