<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sacalabici"
        android:networkSecurityConfig="@xml/network_security_config"
        android:minSdkVersion="21"
        tools:targetApi="31" >

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />

        <activity
            android:name=".framework.adapters.views.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Sacalabici.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".framework.adapters.views.activities.AddAnnouncementActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"/>

        <activity
            android:name=".framework.adapters.views.activities.ModifyAnnouncementActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"/>

        <activity
            android:name=".framework.adapters.views.activities.Session.SessionActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".framework.adapters.views.activities.Session.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".framework.adapters.views.activities.Session.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".framework.adapters.views.activities.Session.RegisterContinueActivity"
            android:exported="false"
            android:theme="@style/Theme.Sacalabici.NoActionBar"
            android:screenOrientation="portrait"/>
    </application>
</manifest>