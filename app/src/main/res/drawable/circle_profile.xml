<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#393d42"/>
            <corners android:radius="320dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="5dp"
                android:bottom="6dp"/>
        </shape>
    </item>
    <!-- Círculo con color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#a2a2a2"/> <!-- Color gris claro -->
            <corners android:radius="320dp"/> <!-- Radio del círculo -->
        </shape>
    </item>
</layer-list>
