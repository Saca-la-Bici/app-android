<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer --><item>
    <shape android:shape="rectangle">
        <solid android:color="#0A000000" /> <!-- Darker color for shadow -->
        <corners android:radius="12dp" />
        <padding android:bottom="4dp" android:left="4dp" android:right="4dp" /> <!-- Shadow padding -->
    </shape>
</item>

    <!-- Content Layer -->
    <item android:top="4dp"> <!-- Offset to create shadow space -->
        <shape android:shape="rectangle">
            <solid android:color="@color/cardview_light_background" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>