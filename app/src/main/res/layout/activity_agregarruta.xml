<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Título -->
    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#F6CD0B"/>

    <!-- Distancia -->
    <EditText
        android:id="@+id/etDistancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distancia (ej. 15km)"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#F6CD0B"/>

    <!-- Tiempo -->
    <EditText
        android:id="@+id/etTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiempo (ej. 4h)"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#F6CD0B"/>

    <!-- Nivel -->
    <TextView
        android:id="@+id/tvNivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Selecciona el nivel"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#F6CD0B"
        android:background="?android:attr/selectableItemBackground" />

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/yellow_disabled"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:text="Registrar Ruta"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
