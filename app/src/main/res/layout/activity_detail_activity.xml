<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clDetailActivity"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topRow"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:background="@color/white">
            </ImageButton>

            <TextView
                android:id="@+id/tvActivityTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Título"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvActivityLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Nivel "
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPeopleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_inscritos"
                android:drawablePadding="4dp"
                android:gravity="end" />
            </LinearLayout>

        <ImageView
            android:id="@+id/ivActivityImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image_empty"
            android:scaleType="centerCrop"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/topRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/materialesRow"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivActivityImage">

            <TextView
                android:id="@+id/Materiales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Materiales "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>

            <ImageButton
                android:id="@+id/btnMateriales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                android:paddingTop="2.5dp"
                android:layout_marginEnd="8dp"
                android:background="@color/white"
                android:scaleX="-1"
                android:layout_gravity="end">
            </ImageButton>
        </LinearLayout>

        <TextView
            android:id="@+id/tvActivityDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha: "
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/materialesRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvActivityTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hora: "
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvActivityDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvActivityDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Duración: "
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvActivityTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvActivityLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Ubicación: "
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvActivityDuration"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvActivityDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Distancia: "
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvActivityLocation"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvActivityRenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Renta Bicicletas: "
            android:textColor="@color/darkGray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvActivityDistance"
            android:paddingBottom="4dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/btnRow"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvActivityRenta">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/darkGreen"
                android:text="Ver ruta"
                android:textColor="@color/semiWhite">
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/yellow"
                android:text="Unirse"
                android:textColor="@color/semiWhite">
            </Button>
        </LinearLayout>

        <fragment
            android:id="@+id/nav_host_fragment_content_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRow"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="4dp">
        </fragment>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>