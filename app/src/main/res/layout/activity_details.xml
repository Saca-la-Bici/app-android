<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clDetailActivity"
    android:padding="20dp"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_button"
            android:paddingTop="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:contentDescription="@string/back_button_desc"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tvActivityLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_level"
            android:text="@string/activity_level_list"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPeopleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_participants"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textColor="@color/darkGray"
            android:drawableStart="@drawable/ic_inscritos"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="end" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvActivityTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:text="@string/add_activity_title"
        android:fontFamily="@font/roboto_black"
        android:textSize="18sp"
        android:textColor="@color/darkGray"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/topRow"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvActivityTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:visibility="gone"
                android:id="@+id/ivActivityImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:scaleType="centerInside"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedImageLess"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/materialesRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/ivActivityImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/Materiales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:text="@string/activity_materials"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="14sp"
                    android:textColor="@color/darkGray"
                    android:paddingTop="4dp"
                    android:paddingStart="4dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btnMateriales"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back_button"
                    android:paddingTop="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:contentDescription="@string/back_button_desc"
                    android:scaleX="-1"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvActivityDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_date_list"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/darkGray"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/materialesRow"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvActivityTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_time_list"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/darkGray"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDate"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvActivityDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_duration_list"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/darkGray"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityTime"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvActivityLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_location_list"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/darkGray"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCopyLocation"/>

            <ImageButton
                android:id="@+id/btnCopyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/copy_location"
                android:padding="4dp"
                android:src="@drawable/button_copy"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDuration"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvActivityDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_distance"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/darkGray"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityLocation"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvActivityRenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_rent"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/darkGray"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDistance"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/lightGray"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvActivityRenta" />

            <TextView
                android:id="@+id/tvActivityDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_description"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="@color/darkGray"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityRenta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <!-- Botones -->
            <LinearLayout
                android:id="@+id/btnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">



                <Button
                    android:id="@+id/btnJoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellow"
                    android:text="@string/activity_join"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/semiWhite"/>



                <LinearLayout
                    android:id="@+id/btnSecondaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:visibility="gone"
                        android:id="@+id/btnStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/yellow"
                        android:text="@string/activity_start"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textColor="@color/semiWhite"/>

                    <Button
                        android:visibility="gone"
                        android:id="@+id/btnRuta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/darkGreen"
                        android:text="@string/activity_route"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:textColor="@color/semiWhite"/>
                </LinearLayout>

                <!-- Botón de Validar Asistencia -->
                <Button
                    android:id="@+id/btnValidateAttendance"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/verifyBlue"
                    android:text="@string/Verificar"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="@color/semiWhite"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
