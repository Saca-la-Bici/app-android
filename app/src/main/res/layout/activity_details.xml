<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clDetailActivity"
    android:padding="15dp">

    <!-- LinearLayout fijo en la parte superior -->
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_button"
            android:paddingTop="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:contentDescription="@string/back_button_desc"/>

        <TextView
            android:id="@+id/tvActivityTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/add_activity_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tvActivityLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/activity_level_list"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPeopleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_participants"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_inscritos"
            android:drawablePadding="4dp"
            android:gravity="end" />
    </LinearLayout>

    <!-- ScrollView para el contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivActivityImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/image_empty"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/materialesRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/ivActivityImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/Materiales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:text="@string/activity_materials"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    android:paddingEnd="5dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btnMateriales"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back_button"
                    android:paddingTop="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:contentDescription="@string/back_button_desc"
                    android:scaleX="-1"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvActivityDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingBottom="4dp"
                android:text="@string/activity_date_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/materialesRow"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvActivityTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_time_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDate"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvActivityDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_duration_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityTime"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvActivityLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_location_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCopyLocation"/>

            <ImageButton
                android:id="@+id/btnCopyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/copy_location"
                android:padding="4dp"
                android:src="@drawable/button_copy"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDuration"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvActivityDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_distance"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityLocation"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvActivityRenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_rent"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDistance"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvActivityDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/activity_description"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityRenta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <LinearLayout
                android:id="@+id/btnRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/btnJoin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/yellow"
                        android:text="@string/activity_join"
                        android:textColor="@color/semiWhite"/>

                    <Button
                        android:visibility="gone"
                        android:id="@+id/btnStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/yellow"
                        android:text="@string/activity_start"
                        android:textColor="@color/semiWhite"/>

                </FrameLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btnRuta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/darkGreen"
                    android:text="@string/activity_route"
                    android:textColor="@color/semiWhite"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>