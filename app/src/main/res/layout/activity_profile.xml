<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FerxX_123"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <ImageButton
        android:id="@+id/btn_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/notifications"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <ImageButton
        android:id="@+id/btn_configuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <View
        android:id="@+id/vUser"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_profile"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintStart_toStartOf="@id/vUser"
        app:layout_constraintTop_toTopOf="@id/vUser"
        app:layout_constraintHorizontal_bias="0.5" />

    <ImageView
        android:id="@+id/blood_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/ic_blood"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image" />

    <TextView
        android:id="@+id/profile_blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="O+"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/blood_icon"
        app:layout_constraintTop_toTopOf="@id/blood_icon" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fernando Pérez López"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/vUser"
        app:layout_constraintTop_toBottomOf="@id/profile_image" />

    <View
        android:id="@+id/vUserinformation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_rodadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/text_kilometros"
        app:layout_constraintStart_toStartOf="@id/vUserinformation"
        app:layout_constraintTop_toTopOf="@id/vUserinformation"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        android:gravity="center"/>

    <TextView
        android:id="@+id/label_rodadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/PRodadas"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        app:layout_constraintEnd_toEndOf="@id/text_rodadas"
        app:layout_constraintStart_toStartOf="@id/text_rodadas"
        app:layout_constraintTop_toBottomOf="@id/text_rodadas"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/text_kilometros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="8.2 km"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        app:layout_constraintEnd_toStartOf="@id/text_amigos"
        app:layout_constraintStart_toEndOf="@id/text_rodadas"
        app:layout_constraintTop_toTopOf="@id/vUserinformation" />

    <TextView
        android:id="@+id/label_kilometros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/PKilometros"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        app:layout_constraintEnd_toEndOf="@id/text_kilometros"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@id/text_kilometros"
        app:layout_constraintTop_toBottomOf="@id/text_kilometros"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/text_amigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="223"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/vUserinformation"
        app:layout_constraintStart_toEndOf="@id/text_kilometros"
        app:layout_constraintTop_toTopOf="@id/vUserinformation"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        android:gravity="center"/>

    <TextView
        android:id="@+id/label_amigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/PAmigos"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        app:layout_constraintEnd_toEndOf="@id/text_amigos"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="@id/text_amigos"
        app:layout_constraintTop_toBottomOf="@id/text_amigos"
        app:layout_constraintVertical_bias="0.444" />


    <LinearLayout
        android:id="@+id/profile_options"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:id="@+id/btn_edit_profile"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/tv_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="@string/PEdit"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp">

            <ImageButton
                android:id="@+id/btn_share_profile"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:background="@drawable/rounded_button" />

            <TextView
                android:id="@+id/tv_share_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="@string/PShareProfile"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnAgregarAmigos"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_add_friend" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/vIcons"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454"></View>

    <ImageButton
        android:id="@+id/btnEventos"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_event"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@id/vIcons"
        app:layout_constraintTop_toTopOf="@id/vIcons"
        app:layout_constraintStart_toStartOf="@id/vIcons"
        app:layout_constraintEnd_toStartOf="@id/btnAsistencia"
        app:layout_constraintVertical_bias="0.2"/>

    <ImageButton
        android:id="@+id/btnAsistencia"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@id/vIcons"
        app:layout_constraintTop_toTopOf="@id/vIcons"
        app:layout_constraintStart_toEndOf="@id/btnEventos"
        app:layout_constraintEnd_toStartOf="@id/btnGlobal"
        app:layout_constraintVertical_bias="0.2"/>

    <ImageButton
        android:id="@+id/btnGlobal"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_global"
        android:background="@null"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/vIcons"
        app:layout_constraintTop_toTopOf="@id/vIcons"
        app:layout_constraintStart_toEndOf="@id/btnAsistencia"
        app:layout_constraintEnd_toEndOf="@id/vIcons"
        app:layout_constraintVertical_bias="0.2"/>

    <FrameLayout
        android:id="@+id/vFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vIcons"
        app:layout_constraintVertical_bias="0.256" >


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_faq"
            app:backgroundTint="@color/yellow"
            app:fabSize="mini"
            android:layout_gravity="bottom|end"
        />

    </FrameLayout>


    <!-- Boton Asignación de roles y persmisos -->
    <Button
        android:id="@+id/BAsaingRol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prueba: Asignar de roles y permisos"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />
        />

    <include layout="@layout/main_navbar"/>

</androidx.constraintlayout.widget.ConstraintLayout>