<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Guidelines para márgenes laterales-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <!--Toolbarsuperior-->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"/>

    <!--Botónderegreso-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/BBack"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:src="@drawable/back_button"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"/>

    <!--Título-->
    <TextView
        android:id="@+id/TVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recupera tu contraseña"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="@id/start_guideline"

        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <!--Mensaje-->
    <TextView
        android:id="@+id/TVMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Entendemos que estas cosas pasan. Enviaremos un enlace de recuperación a tu correo.Tú no te preocupes."
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/TVTitle"/>

    <!--Iconodebicicleta-->
    <View
        android:id="@+id/VBike"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_bike"
        app:layout_constraintStart_toEndOf="@id/TVTitle"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <!--Textoparaelcorreoelectrónico-->
    <TextView
        android:id="@+id/TVEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/TEmail"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/TVMessage"/>

    <!--Campodetextoparaelcorreoelectrónico-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/TVEmail"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintEnd_toEndOf="@id/end_guideline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:padding="24dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:hint="@string/TEmail"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--Botónparaenviarenlace-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/BSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_black"
        android:padding="12dp"
        android:text="Enviar enlace"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:backgroundTint="@color/yellow"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/TILEmail"/>



    <!--Mensaje-->
    <TextView
        android:id="@+id/TVAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ya tienes una cuenta?"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/BSession"/>

    <!--Enlaceparainiciarsesión-->
    <TextView
        android:id="@+id/TVForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/underline"
        android:text="Inicia sesión aquí"
        android:paddingBottom="10dp"
        android:textSize="13sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toEndOf="@id/TVAccount"
        app:layout_constraintBaseline_toBaselineOf="@id/TVAccount"/>

    <!--Fondo-->
    <View
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/vector_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="375dp"
        android:layout_height="160dp"
        android:background="@drawable/vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:background="@drawable/vector_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

