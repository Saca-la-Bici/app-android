<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Fondo -->
    <View
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/vector_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="375dp"
        android:layout_height="160dp"
        android:background="@drawable/vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:background="@drawable/vector_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <!-- Guias -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Contenedor principal -->
    <View
        android:id="@+id/VContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline" />

    <!-- Barra de tareas -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/VContainer"
        app:layout_constraintStart_toStartOf="@+id/VContainer" />

    <!-- Botón de regreso -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/BBack"
        android:layout_width="17.71dp"
        android:layout_height="15.5dp"
        android:src="@drawable/back_button"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar" />

    <!-- Título de la vista -->
    <TextView
        android:id="@+id/TVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TMakeAccount"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Imagen de linea -->
    <View
        android:id="@+id/VHorizontalLine"
        android:layout_width="90dp"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/ic_line"
        app:layout_constraintStart_toEndOf="@+id/TVTitle"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Imagen de bicicleta -->
    <View
        android:id="@+id/VBike"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_bike"
        app:layout_constraintStart_toEndOf="@+id/VHorizontalLine"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Fecha de nacimeinto -->
    <TextView
        android:id="@+id/TVBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/TBirthday"
        android:textSize="19sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/TVTitle" />

    <!-- Advertencia de informacion publica -->
    <TextView
        android:id="@+id/TVAdvertisement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TPrivacityAdd"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/TVBirthday" />

    <!-- Botón de fecha -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/BDate"
        android:layout_width="0dp"
        android:text="@string/TDate"
        android:layout_marginTop="20dp"
        app:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:fontFamily="@font/roboto_medium_italic"
        app:icon="@drawable/ic_calendario"
        app:iconTint="@color/semi_transparent_black"
        app:layout_constraintTop_toBottomOf="@id/TVAdvertisement"
        app:layout_constraintEnd_toEndOf="@id/VContainer"
        app:layout_constraintStart_toStartOf="@id/VContainer"
        app:strokeColor="#D9D9D9"
        app:strokeWidth="1dp" />

    <!-- Número de emergencia -->
    <TextView
        android:id="@+id/TVEmergencyPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/TNumeroEmergencia"
        android:textSize="19sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/BDate" />

    <!-- Advertencia de n[umero de emergencia -->
    <TextView
        android:id="@+id/TVEmergencyPhoneAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TPrivacityAdd"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/TVEmergencyPhone" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVEmergencyPhoneAdd"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintEnd_toEndOf="@+id/VContainer">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:hint="@string/TPhoneNumber"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ccp_textSize="11dp"
        app:layout_constraintTop_toBottomOf="@id/TVEmergencyPhoneAdd"
        app:layout_constraintEnd_toEndOf="@+id/VContainer"
        app:layout_constraintBottom_toBottomOf="@id/TILPhoneNumber"
        app:layout_constraintTop_toTopOf="@id/TILPhoneNumber"/>

    <!-- Número de emergencia -->
    <TextView
        android:id="@+id/TVBloodType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/TBloodType"
        android:textSize="19sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/TILPhoneNumber" />

    <!-- Advertencia de n[umero de emergencia -->
    <TextView
        android:id="@+id/TVBloodTypeAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TPrivacityAdd"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="@+id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/TVBloodType" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILBloodType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/TBloodType"
        app:layout_constraintTop_toBottomOf="@id/TVBloodTypeAdd"
        app:layout_constraintStart_toStartOf="@id/VContainer"
        app:layout_constraintEnd_toEndOf="@id/VContainer">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:padding="24dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:hint="@string/TBloodType"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:fontFamily="@font/roboto_regular"/>

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Botón de finalizar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/BFinish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/TFinish"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_black"
        app:cornerRadius="14dp"
        app:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/VContainer"
        app:layout_constraintEnd_toEndOf="@id/VContainer"
        app:layout_constraintTop_toBottomOf="@id/TILBloodType" />

</androidx.constraintlayout.widget.ConstraintLayout>