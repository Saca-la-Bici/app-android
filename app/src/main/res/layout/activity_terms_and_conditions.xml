<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <View
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/vector_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="375dp"
        android:layout_height="160dp"
        android:background="@drawable/vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:background="@drawable/vector_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Guias -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Contenedor principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/VContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Barra de tareas -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@id/VContainer"
                app:layout_constraintStart_toStartOf="@+id/VContainer" />

            <!-- Botón de regreso -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/BBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="@+id/toolbar" />

            <!-- Título de la vista -->
            <TextView
                android:id="@+id/TVTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para crear una cuenta, lea y acepte los términos y condiciones"
                android:textSize="25sp"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="@+id/VContainer"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />

            <!-- Imagen de linea -->
            <View
                android:id="@+id/VHorizontalLine"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/ic_line"
                app:layout_constraintStart_toEndOf="@+id/TVTitle"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />

            <!-- Advertencia de informacion publica -->
            <TextView
                android:id="@+id/TVAdvertisement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al registrarte estás aceptando los Términos y Política de Privacidad de Saca la Bici"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="25dp"
                android:autoLink="none"
                app:layout_constraintStart_toStartOf="@+id/VContainer"
                app:layout_constraintTop_toBottomOf="@id/TVTitle" />

            <!-- Botón de finalizar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/BFinish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Estoy de Acuerdo"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_black"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/VContainer"
                app:layout_constraintEnd_toEndOf="@id/VContainer"
                app:layout_constraintTop_toBottomOf="@id/TVAdvertisement" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
