<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <View
        android:id="@+id/yellowRectangle"
        android:layout_width="120dp"
        android:layout_height="6dp"
        android:background="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <View
        android:id="@+id/grayRectangle"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        app:layout_constraintBottom_toBottomOf="@id/yellowRectangle" />

    <!-- Primer medalla y texto -->

    <ImageView
        android:id="@+id/firstmedal"
        android:layout_width="67dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/active_medal_act_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grayRectangle" />

    <!-- Segunda medalla y texto -->

    <TextView
        android:id="@+id/firstMedalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Asiste a 20 rodadas"
        android:textAlignment="center"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/firstmedal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/firstmedal"
        app:layout_constraintTop_toBottomOf="@id/firstmedal" />

    <!-- Tercera medalla y texto -->

    <ImageView
        android:id="@+id/secondmedal"
        android:layout_width="60dp"
        android:layout_height="69dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/active_medal_level_1"
        app:layout_constraintStart_toEndOf="@id/firstmedal"
        app:layout_constraintTop_toBottomOf="@id/grayRectangle" />

    <TextView
        android:id="@+id/secondMedalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Alcanza nivel 1"
        android:textAlignment="center"
        android:textSize="8sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/secondmedal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/secondmedal"
        app:layout_constraintTop_toBottomOf="@id/secondmedal" />

    <ImageView
        android:id="@+id/thirdmedal"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/active_medal_km_100"
        app:layout_constraintStart_toEndOf="@id/secondmedal"
        app:layout_constraintTop_toBottomOf="@id/grayRectangle" />

    <!-- BotÃ³n de siguiente -->
    <TextView
        android:id="@+id/thirdMedalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Recorre 100 km"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/thirdmedal"
        app:layout_constraintStart_toStartOf="@id/thirdmedal"
        app:layout_constraintTop_toBottomOf="@id/thirdmedal" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:background="@null"
        android:src="@drawable/ic_next"
        app:layout_constraintStart_toEndOf="@id/thirdmedal"
        app:layout_constraintTop_toBottomOf="@id/grayRectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>
