<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Guias -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <!-- Contenedor superior-->

    <LinearLayout
        android:id="@+id/AllContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tabProfile"/>

    <!-- Contenedor principal -->
    <View
        android:id="@+id/VContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/vNavBar"
        app:layout_constraintEnd_toEndOf="@id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/start_guideline" />

    <!-- Barra de tareas -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/VContainer"
        app:layout_constraintStart_toStartOf="@+id/VContainer" />

    <TextView
        android:id="@+id/username"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_black"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar" />

    <View
        android:id="@+id/vUser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="@id/VContainer"
        app:layout_constraintEnd_toEndOf="@id/VContainer"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/baseline_person_24"
        android:background="@color/gray"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintStart_toStartOf="@id/vUser"
        app:layout_constraintTop_toTopOf="@id/vUser"
        app:shapeAppearanceOverlay="@style/RoundedImage"/>

    <ImageView
        android:id="@+id/blood_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/ic_blood"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toTopOf="@id/profileImage" />

    <TextView
        android:id="@+id/profileBlood"
        android:layout_width="40dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/blood_icon"
        app:layout_constraintTop_toTopOf="@id/blood_icon" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/vUser"
        app:layout_constraintTop_toBottomOf="@id/profileImage" />

    <View
        android:id="@+id/vUserinformation"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/profileName"
        app:layout_constraintEnd_toEndOf="@id/VContainer"
        app:layout_constraintStart_toStartOf="@id/VContainer" />

    <TextView
        android:id="@+id/textRodadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintBottom_toTopOf="@id/label_rodadas"
        app:layout_constraintStart_toStartOf="@id/label_rodadas"
        app:layout_constraintEnd_toEndOf="@id/label_rodadas"/>

    <TextView
        android:id="@+id/label_rodadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/PRodadas"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        app:layout_constraintEnd_toStartOf="@id/label_kilometros"
        app:layout_constraintStart_toStartOf="@id/vUserinformation" />

    <TextView
        android:id="@+id/textKilometros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintBottom_toTopOf="@id/label_kilometros"
        app:layout_constraintStart_toStartOf="@id/label_kilometros"
        app:layout_constraintEnd_toEndOf="@id/label_kilometros" />

    <TextView
        android:id="@+id/label_kilometros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/PKilometros"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="@id/vUserinformation"
        app:layout_constraintStart_toEndOf="@id/label_rodadas"
        app:layout_constraintEnd_toEndOf="@id/vUserinformation"
        />

    <View
        android:id="@+id/profile_options"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/vUserinformation"
        app:layout_constraintStart_toStartOf="@id/VContainer"
        app:layout_constraintEnd_toEndOf="@id/VContainer" />

    <!-- BotÃ³n de continuar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/PEdit"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_black"
        app:cornerRadius="14dp"
        app:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/profile_options"
        app:layout_constraintEnd_toEndOf="@id/profile_options"
        app:layout_constraintBottom_toBottomOf="@id/profile_options"
        app:layout_constraintTop_toTopOf="@+id/profile_options"
        app:strokeColor="#D9D9D9"
        app:strokeWidth="1dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabProfile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabIndicatorColor="@color/yellow"
        app:tabSelectedTextColor="#00FFFFFF"
        app:tabTextColor="#00FFFFFF"
        app:tabBackground="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profile_options"
        app:layout_constraintStart_toStartOf="@id/parent"
        app:layout_constraintEnd_toEndOf="@id/parent"/>

    <View
        android:id="@+id/vIcons"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/profile_options"
        app:layout_constraintStart_toStartOf="@id/parent"
        app:layout_constraintEnd_toEndOf="@id/parent" />

    <ImageView
        android:id="@+id/Eventos"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_event"
        android:background="@null"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/vIcons"
        app:layout_constraintTop_toTopOf="@id/vIcons"
        app:layout_constraintStart_toStartOf="@id/vIcons"
        app:layout_constraintEnd_toStartOf="@id/Asistencia"
        app:layout_constraintVertical_bias="0.2"/>

    <ImageView
        android:id="@+id/Asistencia"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:background="@null"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/vIcons"
        app:layout_constraintTop_toTopOf="@id/vIcons"
        app:layout_constraintStart_toEndOf="@id/Eventos"
        app:layout_constraintEnd_toStartOf="@id/Global"
        app:layout_constraintVertical_bias="0.2"/>

    <ImageView
        android:id="@+id/Global"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_global"
        android:background="@null"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/vIcons"
        app:layout_constraintTop_toTopOf="@id/vIcons"
        app:layout_constraintStart_toEndOf="@id/Asistencia"
        app:layout_constraintEnd_toEndOf="@id/vIcons"
        app:layout_constraintVertical_bias="0.2"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/vNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vIcons"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/vNavBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <include layout="@layout/main_navbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
