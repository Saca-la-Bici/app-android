<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Flecha de cerrar -->
    <ImageButton
        android:id="@+id/BCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <!-- Palomita de aceptar -->
    <ImageButton
        android:id="@+id/icon_aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_check_yellow"
        app:tint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/tituloAnadirPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NuevaPregunta"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <!-- Categoría -->
    <TextView
        android:id="@+id/categoria_subtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Categoria"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloAnadirPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoria_subtitulo"
        >

        <RadioButton
            android:id="@+id/categoria1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Categoria1FAQ" />

        <RadioButton
            android:id="@+id/categoria2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Categoria2FAQ" />

        <RadioButton
            android:id="@+id/categoria3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Categoria3FAQ" />

        <RadioButton
            android:id="@+id/categoria4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Categoria4FAQ" />

        <RadioButton
            android:id="@+id/categoria5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Categoria5FAQ" />
    </RadioGroup>

    <!-- Título -->
    <TextView
        android:id="@+id/titulo_pregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Titulo"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Cuadro para introducir título -->
    <EditText
        android:id="@+id/titulo_pregunta_cuadro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/TituloPregunta"
        android:textColor="@color/mediumGray"
        android:textSize="15sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_introduce_text_square"
        app:layout_constraintTop_toBottomOf="@+id/titulo_pregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/descripcion_pregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Descripcion"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo_pregunta_cuadro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Cuadro para introducir descripcion -->
    <EditText
        android:id="@+id/descripcion_pregunta_cuadro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/DescripcionRespuesta"
        android:textColor="@color/mediumGray"
        android:textSize="15sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_introduce_text_square"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_pregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
