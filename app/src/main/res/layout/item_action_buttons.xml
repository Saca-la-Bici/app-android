<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LLActionButtons"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/VActionButtons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#F3F0EB"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">
    </View>

    <TextView
        android:id="@+id/TVDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Eliminar anuncio"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="@id/VActionButtons" />

    <TextView
        android:id="@+id/TVModify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Modificar anuncio"
        android:textColor="#0000FF"
        app:layout_constraintBottom_toTopOf="@id/TVDelete" />

</androidx.constraintlayout.widget.ConstraintLayout>