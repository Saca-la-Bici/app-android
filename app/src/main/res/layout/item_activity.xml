<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clActivity"
    android:padding="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvActivityTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/activity_title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/tvPeopleEnrolled"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPeopleEnrolled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_participants"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_inscritos"
                android:drawablePadding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvActivityDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/activity_date_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvActivityLevel"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <TextView
                android:visibility="visible"
                android:id="@+id/tvActivityLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_level"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="@string/activity_level_list"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvPeopleEnrolled"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvActivityTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/activity_time_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvActivityDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/activity_duration_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/ivActivityImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/image_empty"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvActivityLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/activity_location_list"
                android:textColor="@color/darkGray"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivActivityImage" />

            <TextView
                android:id="@+id/tvActivityDetails"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/activity_details"
                android:textColor="@color/darkGray"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvActivityLocation" />

            <LinearLayout
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/lightGray"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDetails" />

            <Button
                android:visibility="visible"
                android:id="@+id/btnJoin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:layout_marginTop="4dp"
                android:text="@string/activity_join"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvActivityDetails" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>